{
    "name": "almatar-loyalty",
    "version": "1.0.0",
    "description": "Loyalty points transfer system",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "init-db": "node scripts/init-db.js",
        "init-db:test": "cross-env NODE_ENV=test node scripts/setup-test-db.js",
        "test:db": "cross-env NODE_ENV=test jest tests/integration/database.test.js --testTimeout=30000",
        "test:auth": "cross-env NODE_ENV=test jest tests/integration/auth.test.js --testTimeout=30000",
        "test:transfer": "cross-env NODE_ENV=test jest tests/integration/transfer.test.js --testTimeout=30000",
        "test": "cross-env NODE_ENV=test jest --testTimeout=30000 --detectOpenHandles",
        "test:watch": "cross-env NODE_ENV=test jest --watch --testTimeout=30000",
        "test:coverage": "cross-env NODE_ENV=test jest --coverage --testTimeout=30000"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.8.1",
        "helmet": "^7.0.0",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.6.0",
        "node-cron": "^3.0.2"
    },
    "devDependencies": {
        "cross-env": "^10.0.0",
        "jest": "^29.6.1",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3"
    },
    "author": {
        "name": "Ibrahim Tantawy",
        "email": "ibrahem.tantawy94@gmail.com"
    }
}